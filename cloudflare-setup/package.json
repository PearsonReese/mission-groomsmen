{
  "name": "mission-groomsmen-api",
  "version": "1.0.0",
  "description": "Cloudflare Worker API for Mission Groomsmen wedding invitation app",
  "main": "worker.ts",
  "scripts": {
    "dev": "wrangler dev --local --persist",
    "deploy": "wrangler deploy",
    "db:create": "wrangler d1 create mission-groomsmen-db",
    "db:migrate": "wrangler d1 execute mission-groomsmen-db --file=schema.sql",
    "setup": "bun run db:create && bun run db:migrate"
  },
  "dependencies": {
    "@cloudflare/workers-types": "^4.20240925.0"
  },
  "devDependencies": {
    "wrangler": "^3.78.2"
  }
}